#main
  .container
    .row
      #mainbar.span9
        %section#profile.box
          .profile-wrap
            .profile-inner
              .avatar
                = image_tag @person.gravatar_url(:size => 128)
              .info
                %h1
                  = show_person_name(@person)
                  %small= "@#{@person.name}"
                  = show_bio(@person)
                .vcard
                  %dl
                    %dt Github
                    %dd= link_to @person.name, @person.github_url, :rel => 'external nofollow'
                    %dl
                      %dt Join github date
                      %dd= format_time @person.try(:profile).try(:since_at)
                  - if @person.profile && @person.profile.url.present?
                    %dl
                      %dt URL
                      %dd= link_to @person.profile.url, @person.profile.url, :rel => 'external nofollow'
                  - if @person.profile && @person.profile.location.present?
                    %dl
                      %dt Location
                      %dd= @person.profile.location
                  - if @person.profile && @person.profile.company.present?
                    %dl
                      %dt Company
                      %dd= @person.profile.company
          - if @person == current_user
            %footer
              = link_to t('.edit_profile'), settings_profile_path, :class => 'btn'
        %section#topics.box.no-padding
          %table.item-list
            %tbody
              = render :partial => 'topics/topic', :collection => @topics
      #sidebar.span3
        %section.box
          %header= t('.person_status')
          %ul
            %li= t '.topics_count', :count => @topics_count
            %li= t '.replies_count', :count => @replies_count
            %li= t '.repos_count', :count => @repos_count
            %li= t '.followers_count', :count => @followers_count
